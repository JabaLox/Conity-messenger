    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="400"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="label" Content="Придумайте логин и пароль" FontSize="17" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Margin="0,110,0,0" Width="300"></Label>
        <Button Style="{DynamicResource icoStyle}" BorderThickness="0" x:Name="image" Foreground="White" FontFamily="Franklin Gothic Medium Cond" FontSize="30" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Width="110" Margin="0,0,0,0" Height="110" Click="image_Click"  >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <ImageBrush ImageSource="image\profil2.png"></ImageBrush>
            </Button.Background>
        </Button>
        <TextBox Grid.Column="1"  x:Name="Login_text" TextWrapping="Wrap" FontSize="30" FontFamily="Franklin Gothic Medium Cond"  VerticalAlignment="Top" Width="300" Height="50" Margin="0,150,0,0" Grid.Row="1" GotFocus="Login_text_GotFocus" LostFocus="Login_text_LostFocus">
            <TextBox.Template>
                <ControlTemplate>
                    <Border CornerRadius="12" Padding="2" BorderThickness="2" BorderBrush="#FF5272FF">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <TextBox Grid.Column="1"  x:Name="password_text" TextWrapping="Wrap" FontSize="30" FontFamily="Franklin Gothic Medium Cond"  VerticalAlignment="Center" Width="300" Margin="0,80,0,0" Height="50" Grid.Row="1" GotFocus="password_text_GotFocus" LostFocus="password_text_LostFocus">
            <TextBox.Template>
                <ControlTemplate>
                    <Border CornerRadius="12" Padding="2" BorderThickness="2" BorderBrush="#FF5272FF">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <Button Content="Продолжить" x:Name="resume" Foreground="White" Background="#FF5272FF" Grid.Row="1" Grid.Column="1"  VerticalAlignment="Center" Width="300" Margin="0,230,0,0" Height="50" FontFamily="Franklin Gothic Medium Cond" FontSize="30" Click="resume_Click" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Зарегестрироваться" x:Name="register" Foreground="White" Background="#FF5272FF" Grid.Row="1" Grid.Column="1"  VerticalAlignment="Center" Width="300" Margin="0,230,0,0" Height="50" FontFamily="Franklin Gothic Medium Cond" FontSize="30" Click="register_Click" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button BorderThickness="0" x:Name="break"  Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Width="50" HorizontalAlignment="Left"  Height="50" Margin="50,0,0,0" Click="break_Click"  >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <ImageBrush ImageSource="image\break.png"></ImageBrush>
            </Button.Background>
        </Button>
        <Canvas>
            <Polygon Fill="#FF5272FF" Points="70, 170, 130, 50, 230, 150" />
            <Polygon Fill="#FF5272FF" Points="100, 400, 200, 370, 180, 470" />
            <Polygon Fill="#FF5272FF" Points="500, 500, 400, 550, 390, 470" />
            <Polygon Fill="#FF5272FF" Points="1000, 400, 900, 380, 980, 300" />
            <Polygon Fill="#FF5272FF" Points="1000, 100, 830, 50, 850, 180" />
        </Canvas>
        <Border x:Name="border" Grid.Row="1" Grid.Column="1" CornerRadius="60" Background="#FF5272FF">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition />
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition />
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Style="{DynamicResource ButtonStyle1}" BorderThickness="0" x:Name="img1"  Grid.Column="0" Grid.Row="0" VerticalAlignment="Bottom" Width="90" Height="90" MouseEnter="img1_MouseEnter" MouseLeave="img1_MouseLeave" Click="img1_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="40"/>
                        </Style>
                    </Button.Resources>
                    <Button.Background>
                        <ImageBrush ImageSource="image\profil2.jpg"></ImageBrush>
                    </Button.Background>
                </Button>
                <Button Style="{DynamicResource ButtonStyle2}"  BorderThickness="0" x:Name="img2" Grid.Column="1" Grid.Row="0" VerticalAlignment="Bottom" Width="90" Height="90"  MouseEnter="img2_MouseEnter" MouseLeave="img2_MouseLeave" Click="img2_Click"   >
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="40"/>
                        </Style>
                    </Button.Resources>
                    <Button.Background>
                        <ImageBrush ImageSource="image\profil.jpg"></ImageBrush>
                    </Button.Background>
                </Button>
                <Button Style="{DynamicResource ButtonStyle3}" BorderThickness="0" x:Name="img3" Grid.Column="3" Grid.Row="0"  VerticalAlignment="Bottom" Width="90" Height="90" MouseEnter="img3_MouseEnter" MouseLeave="img3_MouseLeave" Click="img3_Click"   >
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="40"/>
                        </Style>
                    </Button.Resources>
                    <Button.Background>
                        <ImageBrush ImageSource="image\profil4.jpg"></ImageBrush>
                    </Button.Background>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
